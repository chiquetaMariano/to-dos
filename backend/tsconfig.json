{
    "compilerOptions": {
        "outDir": "./build",
        "allowJs": true,
        "target": "es6",
        "pretty": true,
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true
    },
    "include": ["./src/**/*", "./models/*"],
    "exclude": ["node_modules", "spec"]
}